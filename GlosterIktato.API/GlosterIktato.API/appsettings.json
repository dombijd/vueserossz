{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=GlosterIktatoDB;Trusted_Connection=true;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "Secret": "YourSuperSecretKeyMustBeAtLeast32CharactersLongForHS256!",
    "Issuer": "GlosterIktato",
    "Audience": "GlosterIktatoUsers",
    "ExpiryMinutes": 60
  },
  "FileStorage": {
    "TempPath": "Storage/Temp",
    "PermanentPath": "Storage/Documents",
    "MaxFileSizeMB": 50
  },
  "Dataxo": {
    "BaseUrl": "https://api.dataxo.example.com",
    "ApiKey": "YOUR_DATAXO_API_KEY_HERE",
    "TimeoutSeconds": 30,
    "RetryCount": 3
  },
  "BusinessCentral": {
    "BaseUrl": "https://api.businesscentral.dynamics.com/v2.0/{tenant}/Production/api/v2.0",
    "TenantId": "YOUR_TENANT_ID",
    "ClientId": "YOUR_CLIENT_ID",
    "ClientSecret": "YOUR_CLIENT_SECRET",
    "CompanyId": "YOUR_COMPANY_ID",
    "TimeoutSeconds": 30,
    "CacheDurationHours": 1
  },
  "Workflow": {
    "ElevatedApprovalThreshold": "500000"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [ "http://localhost:5173", "http://localhost:3000" ]
  }
}